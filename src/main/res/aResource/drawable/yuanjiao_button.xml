<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#e73b47" />
            <stroke android:width="1dp"  android:color="#e73b47"  />
            <corners android:color="#e73b47" android:radius="5dp" />
            />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#c3151f" />
            <stroke android:width="1dp"  android:color="#e73b47" />
            <corners android:color="#e73b47" android:radius="5dp" />
            />
        </shape>
    </item>

</selector>
